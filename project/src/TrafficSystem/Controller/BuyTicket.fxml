<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2"
            fx:controller="TrafficSystem.Controller.BuyTicketController">
    <children>
        <AnchorPane layoutX="0.0" layoutY="0.0" prefHeight="400.0" prefWidth="400.0">
            <children>
                <Button layoutX="116.0" layoutY="234.0" mnemonicParsing="false" onAction="#handleConfirm"
                        prefHeight="27.0" prefWidth="84.0" text="Confirm"/>
                <HBox layoutX="87.0" layoutY="158.0" prefHeight="42.0" prefWidth="299.0">
                    <children>
                        <RadioButton fx:id="subwaySelection" mnemonicParsing="false" prefHeight="18.0" prefWidth="148.0"
                                     text="Subway Ticket"/>
                        <RadioButton fx:id="busSelection" mnemonicParsing="false" prefHeight="18.0" prefWidth="154.0"
                                     text="Bus Ticket"/>
                    </children>
                </HBox>
                <Button layoutX="207.0" layoutY="234.0" mnemonicParsing="false" onAction="#back" prefHeight="27.0"
                        prefWidth="82.0" text="Back"/>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
